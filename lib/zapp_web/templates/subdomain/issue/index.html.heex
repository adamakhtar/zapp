<h1><%= @newsletter.subdomain %></h1>

<table>
  <tbody>
    <%= for issue <- @issues do %>
      <tr>
        <td><%= link issue.title, to: SubdomainRoutes.subdomain_issue_path(@conn, :show, issue) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render ZappWeb.Subdomain.SubscriberView,
          "form.html",
          assigns
            |> Map.put(:changeset, @subscriber_changeset)
            |> Map.put(:action, SubdomainRoutes.subdomain_subscriber_path(@conn, :create)) %>
